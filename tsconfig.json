{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "types": ["node", "mocha"],
    "esModuleInterop": true
  },
  "files": ["browser.d.ts"],
  "include": ["packages/tabs/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "**/coverage/*",
    "**/dist/**/*",
    "packages/**/demo/**/*",
    "packages/**/test/**/snapshots"
  ]
}
